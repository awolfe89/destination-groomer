mixin directoryCard(directory = {})
  .store
    .store__hero
      .store__actions
        if user
          .store__action.store__action--heart

        if user && directory.author.equals(user._id)
          .store__action.store__action--edit
            a(href=`/groomer-directory/${directory._id}/edit`)
              != h.icon('pencil')
        if directory.reviews
          .store__action.store__action--count
            != h.icon('review')
            span= directory.reviews.length

      img(src=`/uploads/${directory.photo || 'reviews-900.jpg'}`)
      h2.title
        a(href=`/groomer-directory/${directory.slug}`) #{directory.name}
    .store__details
      p= directory.description.split(' ').slice(0, 25).join(' ')
      h6 #{directory.location.address}
        